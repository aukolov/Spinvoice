<Window x:Class="Spinvoice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Spinvoice.ViewModels"
        xmlns:views="clr-namespace:Spinvoice.Views"
        Title="Spinvoice"
        Width="525"
        Height="470"
        MinWidth="650"
        MinHeight="300"
        d:DataContext="{d:DesignInstance Type=viewModels:AppViewModel}"
        WindowState="Maximized"
        mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type GridSplitter}">
                <Setter Property="Width" Value="5" />
                <Setter Property="Margin" Value="5,0,5,0" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="ShowsPreview" Value="False" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding OpenExchangeRatesCommand}" Header="_Ex Rates" />
                <MenuItem Command="{Binding OpenQuickBooksCommand}" Header="_QuickBooks" />
                <MenuItem Command="{Binding OpenChartOfAccountsCommand}" Header="_Chart of Accounts" />
            </MenuItem>
        </Menu>

        <Grid Margin="20,10,20,20" DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="100" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="4*" MinWidth="400" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="1.5*" MinWidth="150" />
            </Grid.ColumnDefinitions>

            <views:ProjectBrowserView Grid.Column="0" DataContext="{Binding ProjectBrowserViewModel}" />

            <GridSplitter Grid.Column="1" />

            <TabControl Grid.Column="2">
                <TabItem Header="Document">
                    <WebBrowser views:WebBrowserUtility.BindableSource="{Binding ProjectBrowserViewModel.SelectedFilePath}" />
                </TabItem>
                <TabItem Header="X-Ray">
                    <views:PdfXrayView DataContext="{Binding InvoiceViewModel.PdfXrayViewModel}" />
                </TabItem>
            </TabControl>

            <GridSplitter Grid.Column="3" />

            <views:InvoiceView Grid.Column="4" DataContext="{Binding InvoiceViewModel}" />

        </Grid>
    </DockPanel>
</Window>
